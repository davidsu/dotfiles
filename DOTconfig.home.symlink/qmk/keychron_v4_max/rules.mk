# Keychron V4 Max Custom Keymap Rules

# Enable features
MOUSEKEY_ENABLE = no        # Mouse keys not needed
EXTRAKEY_ENABLE = yes       # Audio control and system control (volume keys)
CONSOLE_ENABLE = no         # Console for debug
COMMAND_ENABLE = no         # Commands for debug and configuration
NKRO_ENABLE = yes           # N-Key Rollover
BACKLIGHT_ENABLE = no       # Enable keyboard backlight functionality
RGBLIGHT_ENABLE = no        # V4 Max uses RGB_MATRIX only, not RGBLIGHT
RGB_MATRIX_ENABLE = yes     # Enable RGB matrix for per-key RGB
AUDIO_ENABLE = no           # Audio output

# Reduce firmware size
LTO_ENABLE = no             # Must be disabled for V4 Max wireless code compatibility
