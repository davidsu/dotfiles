function spectrum_escape(){
    for COLOR in {0..255}
    do
        for STYLE in "38;5"
        do
            TAG="\033[${STYLE};${COLOR}m"
            STR="${STYLE};${COLOR}"
            echo -n "${TAG}${STR}${NONE}  "
        done
        echo
    done
}
function npmlinked(){
   ll node_modules G "@ ->"
   for namespace in $(ls node_modules | grep "^@"); do 
      for module in $(ls node_modules/$namespace | grep '@$' ); do

          _path=./node_modules/$namespace$module
          ll ${_path: : -1}
      done
   done
}
