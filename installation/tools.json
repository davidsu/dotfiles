{
  "tools": {
    "cmake": {
      "type": "dependency",
      "brew_type": "formula",
      "description": "Build system; required for Neovim and high-performance plugins"
    },
    "ninja": {
      "type": "dependency",
      "brew_type": "formula",
      "description": "High-speed build system; required for compiling high-performance Neovim plugins and native extensions"
    },
    "gettext": {
      "type": "dependency",
      "brew_type": "formula",
      "description": "Internationalization library"
    },
    "ripgrep": {
      "type": "workflow",
      "brew_type": "formula",
      "cmd": "rg",
      "description": "Fast line-oriented search tool"
    },
    "fd": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Simple, fast alternative to find"
    },
    "bat": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Cat clone with syntax highlighting; used by fzf for previews"
    },
    "neovim": {
      "type": "workflow",
      "brew_type": "formula",
      "cmd": "nvim",
      "dependencies": ["cmake", "ninja", "gettext", "ripgrep", "fd", "bat"],
      "description": "Extensible text editor"
    },
    "docker": {
      "type": "workflow",
      "brew_type": "formula",
      "homebrew_package": "colima",
      "cmd": "colima",
      "description": "Lightweight container runtime (Colima)"
    },
    "mise": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Multi-language version manager (successor to rtx)"
    },
    "zsh": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Primary shell"
    },
    "git": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Version control"
    },
    "git-open": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Opens the GitHub page for a repository in your browser"
    },
    "fzf": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Command-line fuzzy finder"
    },
    "zoxide": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Smarter cd command - tracks frequently used directories"
    },
    "starship": {
      "type": "workflow",
      "brew_type": "formula",
      "description": "Minimal, blazing-fast, and infinitely customizable prompt for any shell"
    },
    "iterm2": {
      "type": "workflow",
      "brew_type": "cask",
      "description": "Terminal emulator for macOS"
    },
    "karabiner-elements": {
      "type": "workflow",
      "brew_type": "cask",
      "description": "Powerful and stable keyboard customizer for macOS"
    },
    "rectangle": {
      "type": "workflow",
      "brew_type": "cask",
      "description": "Move and resize windows on macOS with keyboard shortcuts"
    },
    "maccy": {
      "type": "workflow",
      "brew_type": "cask",
      "description": "Lightweight clipboard manager for macOS"
    },
    "font-jetbrains-mono-nerd-font": {
      "type": "workflow",
      "brew_type": "cask",
      "homebrew_package": "font-jetbrains-mono-nerd-font",
      "description": "Nerd Font patched version of JetBrains Mono - required for nvim-tree icons"
    }
  }
}
