#!/bin/zsh

# Shortcut to dotfiles directory
export DOTFILES="$HOME/.dotfiles"

# reload zsh configuration
function reload() {
    # Source all .zsh files in the sources directory and subdirectories
    for f in "$DOTFILES"/zsh/sources/**/*.zsh(N); do
        source "$f"
    done
}

# Initial load
reload

# Alias for manual reload
alias a='reload'
