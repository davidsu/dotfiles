#!/usr/bin/env node
const port = Number(process.argv[2])
const query = port ? `#localhost\\\\\\\\:${port} .actions .action` : 'node-frontend'
const osascript = `
            osascript << 'END'
            tell application "Google Chrome"
                activate
                open location "chrome://inspect"
                delay 1
                execute front window's active tab javascript "document.querySelector('${query}').click()"
            end tell
            END
           `
require('child_process').execSync(osascript)
